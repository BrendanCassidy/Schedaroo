/* stylesheet for bipartite */

/* for problem */
#dragbuttons { margin-left: auto; margin-right: auto; width: 425px; }
#sortable li { list-style-type:none; }
#sortable li img { border: 0; vertical-align: middle; }
#sortable input { display: inline; width: 300px; margin-right: 3px; }

/* for run */
#outputTable { width: 50%; margin-left: auto; margin-right: auto; border-collapse: collapse; }
#outputTable td, #outputTable th { border: 1px solid #000000; padding: 10px;}
#outputTable th {color:#FFFFFF; background-color:#262236;}

/* for respond */
#responseTable { margin-left: auto; margin-right: auto; border-collapse: collapse; }
#responseTable th, #responseTable td { border: 1px solid #000000; padding: 5px; }
#responseTable td { text-align: center; }
#responseTable td img { vertical-align: middle; }
#responseTable .highlight { background: darkseagreen; }